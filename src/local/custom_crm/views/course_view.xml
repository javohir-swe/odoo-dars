<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_mycourse_tree" model="ir.ui.view">
        <field name="name">crm.mycourse.tree</field>
        <field name="model">crm.mycourse</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="price"/>
                <field name="teacher_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_mycourse_form" model="ir.ui.view">
        <field name="name">crm.mycourse.form</field>
        <field name="model">crm.mycourse</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price"/>
                        <field name="teacher_id"/>
                    </group>
                    <group>
                        <field name="student_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
